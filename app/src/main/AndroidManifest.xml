<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.webacademy.march">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.webacademy.march.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.webacademy.march.NavActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_nav">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.webacademy.march.DetailActivity"
            android:label="@string/title_activity_detail" />

        <service
            android:name="com.webacademy.march.TestService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.webacademy.march.app.activity.TestFragmentActivity"
            android:label="@string/title_activity_test_fragment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FilesActivity"
            android:label="FILES" />

    </application>

</manifest>
